# A2A Learning Lab Environment Variables

# OpenAI Configuration (Required for AI agents)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-5-mini

# Web Server Configuration
HOST=0.0.0.0
PORT=8080

# A2A Protocol Configuration
A2A_HOST=localhost
A2A_PORT=8081

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/a2a-lab.log

# AI Configuration
AI_TEMPERATURE=0.1
MAX_TOKENS=2000
A2A_CONVERSATION_TIMEOUT=3600
A2A_MAX_HISTORY_LENGTH=20
A2A_ENABLE_REASONING_LOGS=true